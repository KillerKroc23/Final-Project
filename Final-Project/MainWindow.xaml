            <Button Content="Add" Height="38" Background="FloralWhite" HorizontalAlignment="Left" Margin="46,325,0,0" x:Name="Add" VerticalAlignment="Top" Width="82" IsEnabled="True"></Button>
            <Button x:Name="Delete" Content="Delete" Background="FloralWhite" HorizontalAlignment="Left" IsEnabled="True" Margin="48,202,0,0" VerticalAlignment="Top" Width="75" Height="34"/>
            <Button x:Name="Contact_List" Content="Contact List" Background="FloralWhite" HorizontalAlignment="Left" IsEnabled="True" Margin="51,159,0,0" VerticalAlignment="Top" Width="75" Height="34" />
        </Grid>


        <DataGrid HorizontalAlignment="Left" Height="256" Margin="199,130,0,0" VerticalAlignment="Top" Width="518" RenderTransformOrigin="0.884,0.496" BorderBrush="White" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Background>
                <ImageBrush/>
            </DataGrid.Background>
        </DataGrid>
        <Label Content="Today's Activities..."  Height="28" Background="FloralWhite" HorizontalAlignment="Left" Margin="198,96,0,0" VerticalAlignment="Top"/>
        <Label Content="Today's Activites..."  Height="28" Background="FloralWhite" HorizontalAlignment="Left" Margin="198,93,0,0" VerticalAlignment="Top"/>

        <ListBox Margin="199,130,0,0" Background="FloralWhite" Name="listBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="566" Height="256">
