            <ListBoxItem Content="Sean Edwards" IsEnabled="True"></ListBoxItem>
            <ListBoxItem Content="William Jackson" IsEnabled="True"></ListBoxItem>
            <ListBoxItem Content="Stewart Mills" IsEnabled="True"></ListBoxItem>
        </ListBox>



    </Grid>
</Window>
